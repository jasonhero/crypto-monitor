{
    "name": "crypto-monitor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "source ./config/dev-env.sh && npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint",
        "serve": "nodemon dist/src/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
        "test": "jest --forceExit",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "migrations:now": "source ./config/dev-env.sh && knex migrate:latest",
        "migrations:rollback": "source ./config/dev-env.sh && knex migrate:rollback"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jasonhero/crypto-monitor.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jasonhero/crypto-monitor/issues"
    },
    "homepage": "https://github.com/jasonhero/crypto-monitor#readme",
    "dependencies": {
        "body-parser": "^1.18.2",
        "express": "^4.15.4",
        "knex": "^0.13.0",
        "mysql": "^2.14.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.5",
        "@types/express": "^4.0.37",
        "@types/knex": "0.0.61",
        "@types/node": "^8.0.31",
        "concurrently": "^3.5.0",
        "tslint": "^5.7.0",
        "typescript": "^2.5.2"
    }
}